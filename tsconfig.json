{
    "compilerOptions": {

      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "skipLibCheck": true,
      "rootDir": "src",
      "outDir": "dist",
      "esModuleInterop": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",

      /* Bundler mode */
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"],
  }
  